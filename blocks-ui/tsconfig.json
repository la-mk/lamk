{
  "compilerOptions": {
    "target": "es2018",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    
    "declaration": true,
    "removeComments": true,
    "declarationDir": "dist/types",
    "outDir": "./dist/lib",

    "jsx": "react"
  },
  "include": [
    "src"
  ],
}
